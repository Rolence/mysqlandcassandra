<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="0001" author="ara">
        <createTable tableName="roles">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(256)"></column>
        </createTable>
    </changeSet>
    <changeSet id="0000" author="ara">
        <createTable tableName="privilege">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(256)"></column>
        </createTable>
    </changeSet>
    <changeSet author="ara" id="0003">
        <createTable tableName="roles_privileges">
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="privilege_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="0002" author="ara">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(256)"><constraints unique="true" nullable="false" /></column>
            <column name="password" type="VARCHAR(1000)"><constraints nullable="false"/></column>
            <column name="email" type="VARCHAR(100)"><constraints nullable="false" unique="true"/></column>
            <column name="merchant" type="VARCHAR(256)"><constraints nullable="true"/> </column>
        </createTable>
    </changeSet>
    <changeSet author="ara" id="0004">
        <createTable tableName="users_roles">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>